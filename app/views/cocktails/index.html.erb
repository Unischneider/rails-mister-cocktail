<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://source.unsplash.com/1600x900/?cocktail');">
  <div class="banner-content">
    <h1>Cocktails</h1>
    <p>Start and make your own</p>
    <%= link_to "Make it!", new_cocktail_path, class: "btn btn-primary btn-lg"%>
  </div>
</div>
<% @cocktails.each do |cocktail| %>
<div class="product">
  <div class='product-upvote'>
    <div class="product-arrow"></div>
    <div class='product-count'>95</div>
  </div>
  <img src="https://source.unsplash.com/1600x900/?#{<%= cocktail.name %>}" alt="kudoz" class="product-image hidden-xs">
  <div class='product-body'>

    <h3><%= link_to cocktail.name, cocktail_path(cocktail) %> </h3>
    <% cocktail.doses.each do |dose| %>
    <p><%= dose.ingredient.name %></p>
    <p><%= dose.description %></p>
    <% end %>

  </div>
  <ul class="list-inline product-controls hidden-sm hidden-xs">
    <li><a href=""><i class="fa fa-heart"></i></a></li>
    <li><a href=""><i class="fa fa-share"></i></a></li>
    <li><a href=""><i class="fa fa-star"></i></a></li>
  </ul>
</div>
<% end %>
